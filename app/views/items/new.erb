
<div class="container"> 

<h1 class="d-flex justify-content-center">New Item</h1>

<div class="d-flex justify-content-center">
<p style="color: red;"><%= @error if  @error %></p>
</div>

<form action="/item" method="POST">
<label for="name">Item name:</label>
<input class="form-control" id="name" type="text" name="item[name]" placeholder="Enter item name"><br>
<label for="description">Item description:</label>
<input class="form-control" id="description" type="text" name="item[description]" placeholder="Enter item description"><br>
<label for="genre">Item genre:</label>
<input class="form-control" id="genre" type="text" name="item[genre]" placeholder="Starter/Main course..."><br>
<label for="price">Item price:</label>
<input class="form-control" id="price" type="text" name="item[price]" placeholder="Example: $15.99"><br>

<input class="btn btn-primary" type="submit" value="Create Item">
</form>
</div>
