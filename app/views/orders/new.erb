
<div class="container">


<h1><%= @restaurant.name %></h1>


<form method="POST" action="/orders">

<input type="hidden" name="restaurant_id" value="<%= @restaurant.id %>">

<% @items.each do |item| %>


<div class="card">
  <div class="card-body">

    <div class="form-check">

<input style="width: 20px; height: 20px;"class="form-check-input" type="checkbox" id="<%= item.name %>" name="<%= item.name %>">

<input style="width: 40px;" type="number" value="0" name="<%= item.name %>" >

<label for="<%= item.name %>"><%= item.name %></label><span class="badge badge-secondary" ><%= item.price %></span>

<p class="d-flex justify-content-end"><%= item.genre %></p>

<%= item.description %>

    </div>
  </div>
</div>
<% end %>

<input class="btn btn-primary btn-lg btn-block" type="submit" value="Place Order">
</form>
<br><br><br><br>

</div>